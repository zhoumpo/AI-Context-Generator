<!-- MainWindow.xaml -->
<Window x:Class="AI_Context_Generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AI Context Generator" Height="550" Width="900"
        Background="{StaticResource BackgroundColor}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="AI Context Generator" 
                       FontSize="22" 
                       FontWeight="Bold" 
                       Foreground="{StaticResource PrimaryColor}" 
                       Margin="0,0,0,5"/>
            <TextBlock Text="Generate context from your codebase for AI tools" 
                       Foreground="{StaticResource ForegroundColor}" 
                       Opacity="0.7" 
                       FontSize="14" 
                       Margin="0,0,0,15"/>
            
            <Border Background="White" 
                    CornerRadius="6" 
                    Padding="15" 
                    BorderThickness="1" 
                    BorderBrush="{StaticResource BorderColor}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox x:Name="DirectoryPathTextBox" 
                             Grid.Column="0"
                             Style="{StaticResource ModernTextBox}"
                             Margin="0,0,10,0"
                             FontSize="13"
                             Text="{Binding SelectedDirectory, UpdateSourceTrigger=PropertyChanged}"
                             VerticalContentAlignment="Center"
                             Height="36"/>
                    
                    <Button Grid.Column="1" 
                            Content="Browse" 
                            Style="{StaticResource ModernButton}"
                            Width="90" 
                            Height="36"
                            Margin="0,0,10,0" 
                            Click="BrowseButton_Click"/>
                    
                    <Button Grid.Column="2" 
                            Content="Scan" 
                            Style="{StaticResource SecondaryButton}" 
                            Width="90" 
                            Height="36"
                            Click="ScanButton_Click"/>
                </Grid>
            </Border>
        </StackPanel>

        <!-- Options -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="6" 
                Padding="15" 
                BorderThickness="1" 
                BorderBrush="{StaticResource BorderColor}" 
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                           Text="Exclude patterns:" 
                           Margin="0,0,15,0" 
                           VerticalAlignment="Center" 
                           FontWeight="SemiBold"/>
                
                <TextBox x:Name="ExtensionsTextBox" 
                         Grid.Column="1" 
                         Style="{StaticResource ModernTextBox}"
                         Text="bin,obj,packages,.exe,.dll"
                         ToolTip="Enter comma-separated patterns to exclude from scanning"
                         Height="36"
                         VerticalContentAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Progress Section -->
        <GroupBox Grid.Row="2" 
                  Header="Progress" 
                  Style="{StaticResource ModernGroupBox}" 
                  FontWeight="SemiBold" 
                  Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Progress Bar with Label -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Grid Grid.Row="0" Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Scan Progress" Grid.Column="0" FontSize="12" Opacity="0.8"/>
                        <TextBlock Text="{Binding ProgressValue, StringFormat={}{0}%}" Grid.Column="1" FontSize="12" Opacity="0.8"/>
                    </Grid>
                    
                    <ProgressBar x:Name="ScanProgressBar" 
                                 Grid.Row="1"
                                 Height="10" 
                                 Style="{StaticResource ModernProgressBar}"
                                 Value="{Binding ProgressValue}" 
                                 Maximum="100"/>
                </Grid>

                <!-- Log Output -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Log Output" 
                               Grid.Row="0" 
                               Margin="0,0,0,5" 
                               FontSize="12" 
                               Opacity="0.8"/>
                    
                    <Border Grid.Row="1" 
                            BorderThickness="1" 
                            BorderBrush="{StaticResource BorderColor}" 
                            CornerRadius="4">
                        <TextBox x:Name="LogTextBox" 
                                 IsReadOnly="True" 
                                 VerticalScrollBarVisibility="Auto" 
                                 TextWrapping="Wrap"
                                 Text="{Binding LogText}" 
                                 Background="#f8f9fa"
                                 Padding="10"
                                 FontFamily="Consolas"
                                 BorderThickness="0"/>
                    </Border>
                </Grid>
            </Grid>
        </GroupBox>

        <!-- Status Footer -->
        <Grid Grid.Row="3" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="4" 
                    Padding="10,8" 
                    BorderThickness="1" 
                    BorderBrush="{StaticResource BorderColor}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Status: " FontWeight="SemiBold"/>
                    <TextBlock x:Name="StatusText" Text="Ready" Foreground="{StaticResource SecondaryColor}"/>
                </StackPanel>
            </Border>
            
            <Button Grid.Column="1" 
                    Content="Open Output File" 
                    Style="{StaticResource ModernButton}"
                    Width="150" 
                    Height="36"
                    Click="OpenOutputButton_Click" 
                    IsEnabled="{Binding IsScanComplete}"/>
        </Grid>
    </Grid>
</Window>